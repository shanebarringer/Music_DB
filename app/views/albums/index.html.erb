<p id="notice"><%= notice %></p>

<center>
  <h1>Albums</h1>
</center>


<div class="container">
  <div class="row">
    <% @albums.each do |album| %>
      <%= link_to image_tag(album.cover_url, class: 'col-md-3 index-album-cover'), album %>
    <% end %>
  </div>
  <br>
  <%= link_to 'New Album', new_album_path, class: 'btn btn-md btn-success' %>
</div>


<%= will_paginate @albums, renderer: BootstrapPagination::Rails %>